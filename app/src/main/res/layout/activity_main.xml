<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg10"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100sp"
        android:layout_marginTop="80sp"
        android:layout_marginEnd="8sp"
        android:layout_marginBottom="8sp"
        android:fontFamily="@font/coiny"
        android:text=" Enter number of dice"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/txtDiceNo"
        android:layout_width="52sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100sp"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="140sp"
        android:layout_marginEnd="8sp"
        android:layout_marginBottom="8sp"
        android:ems="10"
        android:fontFamily="@font/alegreya_sc_bold"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:text="12" />

    <Button
        android:id="@+id/btnRoll"
        style="@android:style/Widget.Button"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#BEE21313"
        android:fontFamily="@font/coiny"
        android:text="Roll Dice"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/imgDice4"
        android:layout_width="100dp"
        android:layout_height="93dp"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:srcCompat="@drawable/d1" />

</RelativeLayout>